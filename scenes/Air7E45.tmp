script/source = "extends CollisionShape3D

@export var physics_body: Node3D
@export var template_mesh: PlaneMesh
@onready var faces = template_mesh.get_faces()
@onready var snap = Vector3.ONE * template_mesh.size.x / 2
@onready var TerrainNode = $\"../../../Floor/Terrain3D\"

func _ready():
	if not TerrainNode:
		push_error(\"Terrain3D node not found! Check the path.\")
		return

	update_shape()

func _physics_process(delta):
	var player_rounded_position = physics_body.global_position.snapped(snap) * Vector3(1, 0, 1)
	
	if global_position != player_rounded_position:
		global_position = player_rounded_position
		update_shape()

func update_shape():
	if TerrainNode:
		for i in range(faces.size()):
			
			var global_vert = faces[i] + global_position
			var height = TerrainNode.get_terrain_height(global_vert.x, global_vert.z)
			print(TerrainNode.get_terrain_height(global_vert.x, global_vert.z))
			faces[i].y = height
"

